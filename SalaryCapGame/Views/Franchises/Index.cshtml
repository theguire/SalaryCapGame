@model IEnumerable<SalaryCapData.Models.Franchise>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Owner/Index.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateModified)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.League)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.League.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FranchiseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FranchiseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FranchiseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
