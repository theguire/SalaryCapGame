@model SalaryCapGame.ViewModels.OwnerIndexListingModel

    @{ 
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

<body class=" m-1 p-1">
    <table class="table cntrblk table-condensed table-striped table-responsive">
        <thead>
            <tr>
                <th class="owner_col">Owner</th>
                <th>League</th>
                <th>Franchise</th>
                <th>Points</th>
                <th>Value</th>

            </tr>
        </thead>
        <tbody>
            <tr class="rowhighlight">
                <td><a asp-action="Details" asp-controller="Owners" asp-route-id=@Model.Id>@Model.LastName, @Model.FirstName</a></td>
            </tr>

            @Html.Partial( "/Views/Partial/Franchise/FranchiseSummary.cshtml", Model.Franchises )

            </tbody>
    </table>
</body>

