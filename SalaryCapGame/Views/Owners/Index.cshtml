@model SalaryCapGame.ViewModels.OwnerIndexModel

<body class="m-1 p-1">
    <table class="table table-condensed table-bordered table-striped table-responsive">
        <thead>
            <tr>
                <th class="owner_col">Owner</th>
                <th>League</th>
                <th>Franchise</th>
                <th>Points</th>
                <th>Value</th>

            </tr>
        </thead>
        @foreach ( var owner in Model.Owners )
        {
            <tr class="owner_col">
                <td><a asp-action="Details" asp-controller="Owners" asp-route-id=@owner.Id>@owner.LastName, @owner.FirstName</a></td>
            </tr>

            @Html.Partial( "/Views/Partial/Franchise/FranchiseSummary.cshtml", owner.Franchises )
            @if ( owner.Leagues != null )
            {
                @Html.Partial( "/Views/Partial/League/LeagueListing.cshtml", owner.Leagues )

            }
        }
        </table>



        @*@Html.Partial( "/Views/Partial/League/LeagueSummary.cshtml", owner.Leagues )*@


</body>
