@model SalaryCapGame.ViewModels.DashboardViewModel

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ( Html.BeginForm() )
{
	@Html.HiddenFor( model => Model.OwnerIndex.Id )
	@section FranchiseMenu
		{
		<table class="table table-striped table-sm table-responsive">
			<thead>
				<tr>
					<th class="text-left col-sm-2">
						@Html.Label( "Franchise" )
					</th>
					<th class="text-left col-sm-2">
						@Html.Label( "League" )
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach ( var f in Model.OwnerIndex.Franchises )
				{
					<tr>
						<td class="col-sm-2 text-left">
							@Html.ActionLink( f.Name, "Edit", "Franchises", new { f.Id }, null )
						</td>
						<td class="col-sm-2 text-left">
							@Html.ActionLink( f.League.Name, "Index", "League", new { f.LeagueId }, null )
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	<div class="jumbotron container ">
		<table class=" table table-bordered table-hover table-condensed table-responsive">
			<thead>
			<th>
				@Html.Partial( "~/Views/Partial/Franchise/_FranchiseHeader.cshtml" )
			</th>
			</thead>
			<tbody>
				@Html.Partial( "/Views/Partial/Franchise/FranchiseSummary.cshtml", Model.OwnerIndex.Franchises )


			</tbody>
		</table>
	</div>
	@*</div>*@
}



@using ( Html.BeginForm() )
{
	@Html.HiddenFor( model => Model.OwnerIndex.Id )
	@section HitterList
		{
		<h2>Hitters</h2>
		<div class="table-responsive">
			<table class="table table-striped table-sm table-hover">
				<thead>
					<tr>
						<th style="text-align:left" colspan="2">Player</th>
						<th>Position</th>
						<th>Team</th>
						<th>Value</th>
						<th>GP</th>
						<th>AB</th>
						<th>Hits</th>
						<th>Avg</th>
						<th>2B</th>
						<th>3B</th>
						<th>HR</th>
						<th>R</th>
						<th>RBI</th>
						<th>BB</th>
						<th>SB</th>
						<th>SAC</th>
						<th>TB</th>
						<th>EB</th>
						<th>SO</th>
						<th>Pts</th>
					</tr>
				</thead>
				<tbody>

					@foreach ( var item in Model.PlayerIndexModel.Players )
					{
					<tr>
						<td>@Html.DisplayFor( i => item.FirstName ), @Html.DisplayFor( i => item.LastName )</td>
						<td></td>
						<td>@Html.DisplayFor( i => item.Position )</td>
						<td>@Html.DisplayFor( i => item.Team.Abbrev )</td>
						<td>$@Html.DisplayFor( i => item.Value )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.GamesPlayed )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.AtBats )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.Hits )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.Average )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.Doubles )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.Triples )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.HomeRuns )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.Runs )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.RBI )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.Walks )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.StolenBases )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.Sacrifices )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.TotalBases )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.ExtraBases )</td>
						<td>@Html.DisplayFor( i => item.HitterStats.Strikeouts )</td>
						<td>@Html.DisplayFor( i => item.TotalPoints )</td>
					</tr>
					}
				</tbody>
			</table>


		</div>

	}
}

