@model SalaryCapGame.ViewModels.DashboardViewModel

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ( Html.BeginForm() )
{
	@Html.HiddenFor( model => Model.OwnerIndex.Id )
	@section FranchiseMenu
		{
		<table class="table table-striped table-sm table-responsive">
			<thead>
				<tr>
					<th class="text-left col-sm-2">
						@Html.Label( "Franchise" )
					</th>
					<th class="text-left col-sm-2">
						@Html.Label( "League" )
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach ( var f in Model.OwnerIndex.Franchises )
				{
					<tr>
						<td class="col-sm-2 text-left">
							@Html.ActionLink( f.Name, "Edit", "Franchises", new { f.Id }, null )
						</td>
						<td class="col-sm-2 text-left">
							@Html.ActionLink( f.League.Name, "Index", "League", new { f.LeagueId }, null )
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	<div class="jumbotron container ">
		<table class="table table-striped table-hover table-condensed table-responsive">
			<thead>

				@Html.Partial( "~/Views/Partial/Franchise/_FranchiseHeader.cshtml" )
			</thead>
			<tbody>
				@Html.Partial( "/Views/Partial/Franchise/FranchiseSummary.cshtml", Model.OwnerIndex.Franchises )


			</tbody>
		</table>
	</div>
	@*</div>*@
}



