@model IEnumerable<SalaryCapData.Models.Franchise>

@using ( Html.BeginForm() )
{


	@foreach ( var item in Model )
	{
		<tr>
			<td>
				<label><input type="radio" name="franchiseId" id="@item.Id" value="@item.Id" ); /></label>
			</td>
			<td style="text-align:left">
				<a asp-controller="Franchises" asp-action="Index" asp-route-id="@item.Id">@item.Name</a>
			</td>
			<td>
				@String.Format( "{0,6:c}", item.Value )
			</td>
			<td style="color:green;">@String.Format( "+10" )</td>
			<td>
				@String.Format( "{0,6:n}", item.Points )
			</td>
			<td style="color:red;">@String.Format( "-420" )</td>
			<td>
				@String.Format( "{0,6:g}", item.NumberOfTrades )
			</td>
			<td>

				@*<a asp-controller="League" asp-action="Detail" asp-route-id="@item.LeagueId">@item.League.Name</a>*@
			</td>
			<td>@String.Format( "3/10" )</td>
			<td style="color:green;">@String.Format( "+1" ) </td>
		</tr>

	}
}

