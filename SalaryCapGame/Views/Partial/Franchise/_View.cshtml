@model SalaryCapGame.ViewModels.FranchiseMenuModel
@using ( Html.BeginForm() )
{
	@Html.HiddenFor( model => Model.OwnerId )
	@section FranchiseMenu
		{
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th></th>
					<th class="glyphicon-align-left col-sm-2">
						@Html.Label( "Franchise" )
					</th>
					<th class="glyphicon-align-left col-sm-2">
						@Html.Label( "League" )
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach ( var f in Model.Franchises )
				{
					<tr>
						<td class="col-sm-2">
							<div class="radio">
								<label><input type="radio" id="@f.Id" /></label>
							</div>
							@Html.ActionLink( f.Name, "Edit", "Franchises", new { f.Id }, null )
						</td>
						<td class="col-sm-2">
							@Html.ActionLink( f.League.Name, "Index", "League", new { f.LeagueId }, null )
						</td>
					</tr>
				}
			</tbody>
		</table>

	}

}
