@model SalaryCapGame.ViewModels.LeagueIndexListingModel

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.LeagueListingModel.Name)</th>
            <th>@Html.DisplayNameFor(model => model.LeagueListingModel.Commissioner)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor( model => model.LeagueListingModel.Name )</td>
            <td>@Html.DisplayFor( model => model.LeagueListingModel.Commissioner.Email )</td>
            
        </tr>
        @foreach (var f in Model.Franchises ) {
        <tr>
            <td>@Html.DisplayFor( modelItem => f.Name )</td>
            <td>@Html.DisplayFor( modelItem => f.Owner.LastName )</td>
            <td>
                <a asp-action="Edit" asp-route-id="@f.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@f.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@f.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
