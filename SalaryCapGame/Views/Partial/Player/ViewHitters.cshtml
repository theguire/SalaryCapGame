@model SalaryCapGame.ViewModels.DashboardViewModel
@*using ( Html.BeginForm() )
	{*@
@Html.HiddenFor( model => Model.OwnerIndex.Id )
@*@section Hitters
	{*@
<div class="container clearfix  table-responsive" width:100%;>
	<table class="table-condensed" cellspacing="0" cellpadding="0" style="border-spacing:0" border="0" width="1200">
		<tr>
			<td>
				<table cellspacing="0" cellpadding="0" width="1000">
					<tr class="stats">
						<th colspan="2" style="text-align:left">Player</th>
						<th>Pos</th>
						<th>Team</th>
						<th>GP</th>
						<th>AB</th>
						<th>Hits</th>
						<th>Avg</th>
						<th>2B</th>
						<th>3B</th>
						<th>HR</th>
						<th>R</th>
						<th>RBI</th>
						<th>BB</th>
						<th>SB</th>
						<th>SAC</th>
						<th>TB</th>
						<th>EB</th>
						<th>SO</th>
						<th>Value</th>
						<th>Pts</th>
					</tr>
				</table>
			</td>
		</tr>
		<tr>
			<td>
				<div style="overflow:auto; width:1000px; height:400px;">
					<table cellspacing="0" cellpadding="1" width="990" class="table table-striped table-sm table-hover">
						@foreach ( var item in Model.PlayerStats.HitterStats )
						{
							<tr class="stats">
								<td style="text-align:left">@Html.DisplayFor( i => item.Player.FirstName ) @Html.DisplayFor( i => item.Player.LastName )</td>
								<td>@Html.DisplayFor( i => item.Player.Position )</td>
								<td>@Html.DisplayFor( i => item.Player.Team.Abbrev )</td>
								<td>$@Html.DisplayFor( i => item.Player.InitialValue )</td>
								<td>@Html.DisplayFor( i => item.GamesPlayed )</td>
								<td>@Html.DisplayFor( i => item.AtBats )</td>
								<td>@Html.DisplayFor( i => item.Hits )</td>
								<td>@Html.DisplayFor( i => item.Average )</td>
								<td>@Html.DisplayFor( i => item.Doubles )</td>
								<td>@Html.DisplayFor( i => item.Triples )</td>
								<td>@Html.DisplayFor( i => item.HomeRuns )</td>
								<td>@Html.DisplayFor( i => item.Runs )</td>
								<td>@Html.DisplayFor( i => item.RBI )</td>
								<td>@Html.DisplayFor( i => item.Walks )</td>
								<td>@Html.DisplayFor( i => item.StolenBases )</td>
								<td>@Html.DisplayFor( i => item.Sacrifices )</td>
								<td>@Html.DisplayFor( i => item.TotalBases )</td>
								<td>@Html.DisplayFor( i => item.ExtraBases )</td>
								<td>@Html.DisplayFor( i => item.Strikeouts )</td>
								<td>@Html.DisplayFor( i => item.Player.TotalPoints )</td>
							</tr>
						}
					</table>
				</div>
			</td>
		</tr>
	</table>
</div>

@*}*@
@*}*@