@model SalaryCapGame.ViewModels.DashboardViewModel

@using ( Html.BeginForm() )
{
	@Html.HiddenFor( model => Model.OwnerIndex.Id )
	@*@section Pitchers
	{*@
	
<div class="container">
	<table id="pitchersTable" 
		   class="table table-striped table-inverse table-bordered table-hover"
		   cellspacing="0" width:"100%" cellpadding="0">
		<thead>
			<tr>
				<th>
					Player
				</th>
				<th>
					Position
				</th>
				<th>
					Team
				</th>
				<th>
					Value
				</th>
				<th>
					CG
				</th>
				<th>
					W
				</th>
				<th>
					L
				</th>
				<th>
					S
				</th>
				<th>
					H
				</th>
				<th>
					IP
				</th>
				<th>
					R
				</th>
				<th>
					Hits
				</th>
				<th>
					BB
				</th>
				<th>
					WHIP
				</th>
				<th>
					SO
				</th>
				<th>
					ERA
				</th>
				<th>
					Pts
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach ( var item in Model.PlayerStats.PicthterStats )
			{
				<tr>
					<td>@Html.DisplayFor( i => item.Player.FirstName ) @Html.DisplayFor( i => item.Player.LastName )</td>
					<td>@Html.DisplayFor( i => item.Player.Position )</td>
					<td>@Html.DisplayFor( i => item.Player.Team.Abbrev )</td>
					<td>$@Html.DisplayFor( i => item.Player.InitialValue )</td>
					<td>@Html.DisplayFor( i => item.CompleteGames )</td>
					<td>@Html.DisplayFor( i => item.Wins )</td>
					<td>@Html.DisplayFor( i => item.Loses )</td>
					<td>@Html.DisplayFor( i => item.Saves )</td>
					<td>@Html.DisplayFor( i => item.Holds )</td>
					<td>@Html.DisplayFor( i => item.InningsPitched )</td>
					<td>@Html.DisplayFor( i => item.EarnedRunsAllowed )</td>
					<td>@Html.DisplayFor( i => item.HitsAllowed )</td>
					<td>@Html.DisplayFor( i => item.PitcherWalks )</td>
					<td>@Html.DisplayFor( i => item.WHIP )</td>
					<td>@Html.DisplayFor( i => item.Strikeouts )</td>
					<td>@Html.DisplayFor( i => item.ERA )</td>
					<td>@Html.DisplayFor( i => item.Player.TotalPoints )</td>
				</tr>
			}
		</tbody>
	</table>
</div>
	@*</section>*@
	
}